##!/bin/sh

wget http://geolite.maxmind.com/download/geoip/database/GeoLite2-City.mmdb.gz
mv GeoLite2-City.mmdb GeoLite2-City.mmdb-`date +%y-%m-%d`
gunzip GeoLite2-City.mmdb.gz
